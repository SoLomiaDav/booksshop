
<h1>Всі книжки</h1>
<h3>@Model.currCategory</h3>
<div class="row mt-5 mb-2">
    @{
        foreach (var book in Model.allBooks)
        {
            <div class="col-lg-4">
                <img class="img-trumbnail" src="@book.img" alt="@book.name" />
                <h2>Назва: @book.name</h2>
                <p>@book.author</p>
                <p>Ціна: @book.price.ToString("c")</p>
                <p><a class="btn btn-warning" href="#">Більше</a></p>
                
            </div>
        }
    }
</div>
