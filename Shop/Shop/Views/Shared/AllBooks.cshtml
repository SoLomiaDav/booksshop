@model Book

<div class="col-lg-4">
    <img class="img-trumbnail" src="@Model.img" alt="@Model.name" />
    <h2>Назва: @Model.name</h2>
    <p>@Model.author</p>
    <p>Ціна: @Model.price.ToString("c")</p>
    <p><a class="btn btn-warning" asp-controller="ShopCart" asp-action="AddToCart" asp-route-id="@Model.id">Додати у кошик</a></p>

</div>